        {
            "name": "pitivi",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "--libdir=lib"
            ],
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/pitivi.git",
                    "branch": "master"
                }
            ]
        }
    ]
