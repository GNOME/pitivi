                }
            ]
        },
        {
            "name": "gst-plugins-ugly",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Ddoc=disabled",
                "--libdir=lib"
            ],
            "sources": [
                {
                    "type": "git",
                    "branch": "master",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gst-plugins-ugly.git"
                }
            ]
        },
